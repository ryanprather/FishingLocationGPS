<UserControl
    x:Class="FishingLocationGPS.UserControls.ucManageLocations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FishingLocationGPS.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="90*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAdd" Width="70" Height="40" Margin="0,0,10,0" Click="btnAdd_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;"></TextBlock>
                    <TextBlock Text="Add"></TextBlock>
                </StackPanel>
            </Button>
            
            <Button x:Name="btnEdit" Width="70" Height="40" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;"></TextBlock>
                    <TextBlock Text="Edit"></TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="btnDelete" Width="90" Height="40" Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;"></TextBlock>
                    <TextBlock Text="Delete"></TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <GridView Name="grdLocations">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="20">
                                <Image Height="100" Width="100" Source="../Assets/gpsIcon.png"></Image>
                                <StackPanel Background="WhiteSmoke" Height="100" Width="250" Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
                                        <TextBlock Text ="Name:" FontSize="18" Width="70" FontWeight="Bold" VerticalAlignment="Center" />
                                        <TextBlock Text ="{Binding Name}" FontSize="18" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
                                        <TextBlock Text ="Latitude:" FontSize="18" Width="100" FontWeight="Bold" VerticalAlignment="Center" />
                                        <TextBlock Text ="{Binding Latitude}" FontSize="18" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
                                        <TextBlock Text ="Longitude:" FontSize="18" Width="100" FontWeight="Bold" VerticalAlignment="Center" />
                                        <TextBlock Text ="{Binding Longitude}" FontSize="18" VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </ScrollViewer>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Text ="Search" FontSize="30" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,10,0" FontWeight="Bold" />
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" BorderThickness="0,3,0,0" HorizontalAlignment="Left">
            <Border BorderBrush="Black" BorderThickness="0,3,0,0" >
                <StackPanel Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text ="Name" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBox Name="txtName" Width="315" PlaceholderText="name" Margin="10,0,0,0"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Right">
                        <Button x:Name="btnClear" Content="Clear" Click="btnClear_Click" 
                            Width="70" Height="30" Margin="0,0,10,0"/>

                        <Button x:Name="btnSearch" Content="Search" Click="btnSearch_Click"
                            Width="100" Height="30" />
                    </StackPanel>
                </StackPanel>    
            </Border>
            
        </StackPanel>

        <Popup Name="popAdd" CanDrag="True" Grid.Row="1" Grid.Column="0" IsLightDismissEnabled="True" Grid.ColumnSpan="3" Width="800">
            <Border BorderBrush="Black" BorderThickness="3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                <StackPanel Orientation="Vertical" Background="WhiteSmoke">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Add New Location" FontWeight="Bold"></TextBlock>
                        <Button Name="btnPopAddClose" FontFamily="Segoe MDL2 Assets" Content="&#xE711;"></Button>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Pop Up Content"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</UserControl>
